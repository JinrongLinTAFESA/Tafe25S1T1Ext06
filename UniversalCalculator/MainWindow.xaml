<Page
    x:Class="Calculator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calculator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
		<StackPanel Margin="10">
			<TextBlock Text="Universal Calculator" FontSize="24" FontWeight="Bold" Foreground="DarkBlue" HorizontalAlignment="Center" Margin="10"/>
			<Button Content="Maths Calculator" Width="200" Height="50" Background="#C0A98E" HorizontalAlignment="Center" Margin="10"/>
			<Button Content="Mortgage Calculator" Width="200" Height="50" Background="#C0A98E" HorizontalAlignment="Center" Margin="10"/>
			<Button Content="Currency Converter" Width="200" Height="50" Background="#C0A98E" HorizontalAlignment="Center" Margin="10"/>
			<Button Content="Exit" Width="200" Height="50" Background="#C0A98E" HorizontalAlignment="Center" Margin="10"/>
		</StackPanel>
	</Grid>
</Page>
